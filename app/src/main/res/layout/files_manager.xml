<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

    <FrameLayout
        android:id="@+id/linear7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_black"
			android:translationZ="100dp"
			app:tint="#FFFFB300" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#515151"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#3C3C3C"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/select_files"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/file"
                    android:tint="#FFFFB300" />

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1A1A1A"
                    android:orientation="horizontal"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/select_images"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_filter_black"
                    android:tint="#FFFFB300" />

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1A1A1A"
                    android:orientation="horizontal"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/select_anims"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_theaters_black"
                    android:tint="#FFFFB300" />

                <LinearLayout
                    android:id="@+id/linear8"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1A1A1A"
                    android:orientation="horizontal"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/select_sounds"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sounds_icon"
                    android:tint="#FFFFB300" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/filesLin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ListView
                        android:id="@+id/listview1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:choiceMode="none"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="8dp"
                        android:text="@string/there_is_no_files"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="8dp"
                        android:text="@string/click_plus_to_add"
                        android:textColor="#F50057"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
